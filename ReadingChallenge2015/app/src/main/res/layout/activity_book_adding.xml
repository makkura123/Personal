                android:id="@+id/radioButton35"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_school"
                android:id="@+id/radioButton36"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_book"
                android:id="@+id/radioButton37"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cry_book"
                android:id="@+id/radioButton38"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/magic_book"
                android:id="@+id/radioButton39"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/graphic_novel"
                android:id="@+id/radioButton40"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/never_read"
                android:id="@+id/radioButton41"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hometown"
                android:id="@+id/radioButton42"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diff_lang"
                android:id="@+id/radioButton43"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/christmas"
                android:id="@+id/radioButton44"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_book"
                android:id="@+id/radioButton45"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:id="@+id/radioButton46"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banned_book"
                android:id="@+id/radioButton47"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_book"
                android:id="@+id/radioButton48"
                android:textColor="#ffee6465" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/never_finish"
                android:id="@+id/radioButton49"
                android:textColor="#ffee6465" />
    </RadioGroup>

    </ScrollView>

    <Button android:id="@+id/btnAdd"
        android:layout_column="2"
        android:text="Add"
        android:layout_width="fill_parent"
        android:background="#ffee6364"
        android:textColor="#fff8f5ee"
        android:layout_row="8"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:onClick="btnAdding"
        android:nestedScrollingEnabled="true" />

</GridLayout>
